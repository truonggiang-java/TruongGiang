import java.util.Scanner;

public class score {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		String name;
		String address;
		int age;
		double score1,score2 ,score3;
		final float bonus=1.5f;
		double average;
		//Nhap
		System.out.print("Enter name:");
		name=sc.nextLine();
		System.out.print("Enter address:");
		address=sc.nextLine();
		System.out.print("Enter age:");
		age=sc.nextInt();
		System.out.print("Enter score1:");
		score1=sc.nextDouble();
		System.out.print("Enter score2:");
		score2=sc.nextDouble();
		System.out.print("Enter score3:");
		score3=sc.nextDouble();
		
		//in man hinh
		average=((score1+score2+score3+bonus)/3);
		System.out.println("-------------------Student Details----------------------");
		System.out.printf("name: %s",name);
		System.out.printf("address: %s",address);
		System.out.printf("age: %d",age);
		System.out.printf("Score1: %f, Score2: %f, Score3: %f, Bonus: %f",score1,score2,score3,bonus);
		System.out.printf("Average: %f",average);
	}
}
